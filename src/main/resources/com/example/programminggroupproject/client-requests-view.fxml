<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.programminggroupproject.controller.ClientRequestsController"
      alignment="TOP_CENTER"
      spacing="20"
      prefWidth="800" prefHeight="600"
      style="-fx-background-color: #f5f5f5;">

    <padding>
        <Insets top="40" right="40" bottom="40" left="40"/>
    </padding>

    <!-- Top bar -->
    <HBox alignment="CENTER_LEFT"
          style="-fx-background-color: #343a40; -fx-padding: 15; -fx-background-radius: 8;">
        <Label text="CAR SERVICINATOR 3000"
               style="-fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold;"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Button text="Back to Dashboard"
                onAction="#handleBack"
                style="-fx-background-color: #6c757d; -fx-text-fill: white; -fx-padding: 6 12;"/>
    </HBox>

    <!-- Content -->
    <VBox spacing="15" alignment="CENTER" VBox.vgrow="ALWAYS">
        <Label text="My Service Requests">
            <font>
                <Font name="System Bold" size="26"/>
            </font>
        </Label>

        <Label text="View all your submitted service requests"
               style="-fx-text-fill: #666;"/>

        <!-- Table -->
        <TableView fx:id="requestsTable" VBox.vgrow="ALWAYS" prefHeight="400">
            <columns>
                <TableColumn fx:id="idColumn" text="ID" prefWidth="50"/>
                <TableColumn fx:id="vehicleColumn" text="Vehicle" prefWidth="150"/>
                <TableColumn fx:id="servicesColumn" text="Services" prefWidth="200"/>
                <TableColumn fx:id="statusColumn" text="Status" prefWidth="100"/>
                <TableColumn fx:id="dateColumn" text="Date" prefWidth="150"/>
            </columns>
        </TableView>

        <Label fx:id="messageLabel" text="" style="-fx-text-fill: #666;"/>
    </VBox>

</VBox>
